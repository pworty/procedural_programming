#include <iostream>
#include <string>
using namespace std;

int main()
{
    cout << "Input real numbers b, c separated by a singular space or on different lines to solve for x in bx + c = 0" << endl;
    float b, c;
    cin >> b >> c;
    cout << (b != 0 ? "x = " + to_string(-c / b) : (b == 0 && c == 0 ? "x is any real number" : "x is undefined"));
}
