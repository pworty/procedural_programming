#include <iostream>
#include <string>
using namespace std;

int main()
{
    cout << "Input real numbers a, b separated by a singular space or on different lines to perform addition, substraction, multiplication and division if possible" << endl;
    float a;
    float b;
    cin >> a >> b;
    cout << "a + b = " + to_string(a + b) << endl << "a - b = " + to_string(a - b) << endl << "a * b = " + to_string(a * b) << endl <<( b != 0 ? "a / b = " + to_string(a / b) : "Can't perform division, second number is zero");
}
